# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'  # Or python -m SimpleHTTPServer :)

alias l="ls -al"
alias open="xdg-open"

#git Aliases
alias gcod='git checkout dev'
alias gcob='git checkout -b'
alias gaa="git add ."
alias gbd='git branch -d'
alias gclean='git reset --hard && git clean -df'
alias gplo="git pull origin"
alias gpso="git push origin"

#Docker aliases
alias dcd='docker-compose down'
alias dceab='docker-compose exec app bash'
alias dcu='docker-compose up'
alias dcud='docker-compose up -d'
alias dcufr="docker-compose up --build --force-recreate"
alias dsp='docker system prune -f'
alias dspa='docker system prune -a -f'
alias dspav='docker syteme prune -a -f --volumes'
alias dspv='docker syteme prune -f --volumes'
alias dcla="docker-compose logs -f app"
dclc='docker-compose logs -f client'
alias dcecb="docker-compose exec client bash"
alias dsr="docker container stop $(docker container list -a -q) && docker container rm $(docker container list -a -q)"

#Navigation aliases
alias goac="cd ~/code/BjMrq/Active"
alias goar="cd ~/code/BjMrq/Archive"
alias gobo="cd ~/home/bjmrq/code/BjMrq/Boilerplates"
alias gosd="cd ~/code/Softwares\&Drivers"