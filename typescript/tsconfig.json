{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    // "paths": {
    //   "*": [
    //     "./src/*"
    //   ]
    // },
    // "typeRoots": [
    //   "src/types/*",
    //   "node_modules/@types"
    // ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "./dist",
    "./.vscode",
  ]
}